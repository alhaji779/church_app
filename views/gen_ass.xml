<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- explicit list view definition -->
		
		<record model="ir.ui.view" id="general_ass_tree">
			<field name="name">general_ass</field>
			<field name="model">general.ass</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
				 
				</tree>
			</field>
		</record>


		<record id="general_ass_form" model="ir.ui.view">
				<field name="name">general_ass_form</field>
				<field name="model">general.ass</field>
				<field name="arch" type="xml">
						<form string="General Assembly">                
								<sheet>
			
								<group >
										<group >
												<field name="name"/>                  
										</group>
								</group>  

								<notebook>
                        <page string="SYNOD">
                            <field name="synod" context="{'default_gen_id':id}" />
                        </page>
                </notebook>       
							 
								</sheet>             
						</form>
				</field>
		</record>
		

		<!-- actions opening views on models -->
		
		<record model="ir.actions.act_window" id="action_general_ass">
			<field name="name">General Assembly</field>
			<field name="res_model">general.ass</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		
		
		
		<menuitem name="General Assembly" id="gen_ass_menu" parent="church_app_config"
							action="action_general_ass" sequence="1"/>
		<!-- <menuitem name="Server to list" id="church_app" parent="church_app.menu_2"
							action="church_app.action_server"/> -->
		
	</data>
</odoo>
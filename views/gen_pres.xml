<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="general_pres_tree">
      <field name="name">general_pres</field>
      <field name="model">general.pres</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>  
          <field name="gen_id"/> 
          <field name="syn_id"/>
         
        </tree>
      </field>
    </record>


    <record id="general_pres_form" model="ir.ui.view">
        <field name="name">general_pres_form</field>
        <field name="model">general.pres</field>
        <field name="arch" type="xml">
            <form string="Presbytery">                
                <sheet>
      
                <group >
                    <group >
                        <field name="name"/>  
                        <field name="gen_id"/> 
                        <field name="syn_id"/>                 
                    </group>
                </group>  
                <notebook>
                        <page string="PARISH">
                            <field name="parish" context="{'default_pres_id':id}" />
                        </page>
                </notebook>        
               
                </sheet>             
            </form>
        </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="action_general_pres">
      <field name="name">Presbytery</field>
      <field name="res_model">general.pres</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    
    
    
    <menuitem name="Presbytery" id="gen_pres_menu" parent="church_app_config"
              action="action_general_pres" sequence="20"/>
    <!-- <menuitem name="Server to list" id="church_app" parent="church_app.menu_2"
              action="church_app.action_server"/> -->
    
  </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="general_parish_tree">
      <field name="name">general_parish</field>
      <field name="model">general.parish</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="gen_id"/> 
          <field name="syn_id"/> 
          <field name="pres_id"/> 
         
        </tree>
      </field>
    </record>


    <record id="general_parish_form" model="ir.ui.view">
        <field name="name">general_parish_form</field>
        <field name="model">general.parish</field>
        <field name="arch" type="xml">
            <form string="Parish">                
                <sheet>
      
                <group >
                    <group >
                        <field name="name"/>  
                        <field name="gen_id"/> 
                        <field name="syn_id"/> 
                        <field name="pres_id"/>                  
                    </group>
                </group> 
                <notebook>
                        <page string="CONGREGATION">
                            <field name="cong" context="{'default_parish_id':id}" />
                        </page>
                </notebook>        
               
                </sheet>             
            </form>
        </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="action_general_parish">
      <field name="name">Parish</field>
      <field name="res_model">general.parish</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    
    
    
    <menuitem name="Parish" id="gen_parish_menu" parent="church_app_config"
              action="action_general_parish" sequence="30"/>
    <!-- <menuitem name="Server to list" id="church_app" parent="church_app.menu_2"
              action="church_app.action_server"/> -->
    
  </data>
</odoo>